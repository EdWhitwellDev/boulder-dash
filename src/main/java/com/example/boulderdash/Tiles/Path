package Tiles;

import Actor.Actor;

public class Path extends Floor {
    public Path(Position position) {
        super(position);
    }

    @Override
    public void playerOnFloor(Actor actor) {
        if (occupant == null) { // Ensure the tile is not already occupied
            setOccupant(actor); // Set the actor as the occupant
        }
    }
    @Override
    public boolean getCanBeOccupied() {
        return occupant == null; // Path can be occupied if no actor is present
    }
}
