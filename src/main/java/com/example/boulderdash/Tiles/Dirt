package Tiles;

import Actor.Actor;

public class Dirt extends Floor {

    public Dirt(Position position) {
        super(position);
    }

    @Override
    public void playerOnFloor(Actor actor) {
        if (occupant == null) { // Ensure the tile is not already occupied
            setOccupant(actor); // Set the actor as the occupant
            compact(); // Transform the Dirt into a Path
        }
    }

    private void compact() {
        this.isFloor = true; //turns into floor which is walkable
    }

    @Override
    public boolean getCanBeOccupied() {
        return !isWall && occupant == null;
    }
}
